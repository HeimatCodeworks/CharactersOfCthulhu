<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CharactersOfCthulhu.ViewModels"
             x:DataType="viewmodels:MethodSelectionViewModel"
             x:Class="CharactersOfCthulhu.Views.MethodSelectionPage"
             Title="Select Stat Method">

    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="30" Spacing="15">

                <Label Text="Classic Methods"
                       FontSize="22"
                       FontAttributes="Bold"
                       IsVisible="{Binding IsClassic}" />

                <Frame IsVisible="{Binding IsClassic}" Padding="0" CornerRadius="5" BorderColor="Gray">
                    <Button Text="Classic (Roll)"
                            Command="{Binding SelectMethodCommand}"
                            CommandParameter="ClassicRoll"
                            HeightRequest="60" />
                </Frame>

                <Frame IsVisible="{Binding IsClassic}" Padding="0" CornerRadius="5" BorderColor="Gray">
                    <Button Text="Point Buy"
                            Command="{Binding SelectMethodCommand}"
                            CommandParameter="ClassicPointBuy"
                            HeightRequest="60" />
                </Frame>

                <Frame IsVisible="{Binding IsClassic}" Padding="0" CornerRadius="5" BorderColor="Gray">
                    <Button Text="Freeform"
                            Command="{Binding SelectMethodCommand}"
                            CommandParameter="ClassicFreeform"
                            HeightRequest="60" />
                </Frame>

                <Label Text="Pulp Methods"
                       FontSize="22"
                       FontAttributes="Bold"
                       IsVisible="{Binding IsPulp}" />

                <Frame IsVisible="{Binding IsPulp}" Padding="0" CornerRadius="5" BorderColor="Gray">
                    <Button Text="Classic (Roll)"
                            Command="{Binding SelectMethodCommand}"
                            CommandParameter="PulpRoll"
                            HeightRequest="60" />
                </Frame>

                <Frame IsVisible="{Binding IsPulp}" Padding="0" CornerRadius="5" BorderColor="Gray">
                    <Button Text="Point Buy"
                            Command="{Binding SelectMethodCommand}"
                            CommandParameter="PulpPointBuy"
                            HeightRequest="60" />
                </Frame>

                <Frame IsVisible="{Binding IsPulp}" Padding="0" CornerRadius="5" BorderColor="Gray">
                    <Button Text="Freeform"
                            Command="{Binding SelectMethodCommand}"
                            CommandParameter="PulpFreeform"
                            HeightRequest="60" />
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*"
              Padding="10">

            <Button Grid.Column="0"
                    Text="Back"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Start" />

        </Grid>
    </Grid>

</ContentPage>