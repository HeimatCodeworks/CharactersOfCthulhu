<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CharactersOfCthulhu.ViewModels"
             xmlns:models="clr-namespace:CharactersOfCthulhu.Models"
             x:DataType="viewmodels:EraPageViewModel"
             x:Class="CharactersOfCthulhu.Views.EraPage"
             Title="Select Era">

    <Grid RowDefinitions="*,Auto">

        <VerticalStackLayout BindableLayout.ItemsSource="{Binding EraChoices}"
                                 RadioButtonGroup.GroupName="eraGroup"
                                 RadioButtonGroup.SelectedValue="{Binding SelectedEraName}">

            <BindableLayout.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:EraChoice">
                    <Frame HasShadow="False" BorderColor="Gray" Padding="15" CornerRadius="5">
                        <RadioButton Content="{Binding Name}"
                                         Value="{Binding Name}"
                                         IsChecked="{Binding IsDefault}" />
                    </Frame>
                </DataTemplate>
            </BindableLayout.ItemTemplate>

        </VerticalStackLayout>

        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*"
              Padding="10">

            <Button Grid.Column="0"
                    Text="Back"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Start" />

            <Button Grid.Column="1"
                    Text="Next"
                    Command="{Binding GoToNextPageCommand}"
                    HorizontalOptions="End" />
        </Grid>
    </Grid>

</ContentPage>