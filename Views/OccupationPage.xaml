<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CharactersOfCthulhu.Models"
             xmlns:viewmodels="clr-namespace:CharactersOfCthulhu.ViewModels"
             xmlns:converters="clr-namespace:CharactersOfCthulhu.Converters"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodels:OccupationPageViewModel"
             x:Class="CharactersOfCthulhu.Views.OccupationPage"
             Title="Select Occupation">

    <ContentPage.Resources>
        <converters:StringListConverter x:Key="StringListConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto">

        <CollectionView 
            Grid.Row="0"
            ItemsSource="{Binding Occupations}"
            SelectionMode="Single"
            SelectedItem="{Binding SelectedOccupation}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Occupation">
                    <Frame Margin="10,5" Padding="0">
                        <toolkit:Expander>
                            <toolkit:Expander.Header>
                                <Label Text="{Binding Name}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       Margin="10" />
                            </toolkit:Expander.Header>

                            <toolkit:Expander.Content>
                                <VerticalStackLayout Padding="10" Spacing="8">
                                    <Label FontAttributes="Italic"
                                           Text="{Binding Description}" />
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Skill Points: " FontAttributes="Bold" />
                                                <Span Text="{Binding SkillPointFormula}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label>
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="Credit Rating: " FontAttributes="Bold" />
                                                <Span Text="{Binding CreditRatingRange}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                    <Label Text="Skills:" FontAttributes="Bold" />
                                    <Label Text="{Binding Skills, Converter={StaticResource StringListConverter}}" />
                                </VerticalStackLayout>
                            </toolkit:Expander.Content>

                        </toolkit:Expander>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*"
              Padding="10">

            <Button Grid.Column="0"
                    Text="Back"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Start" />

            <Button Grid.Column="1"
                    Text="Next"
                    Command="{Binding GoToSkillsPageCommand}"
                    HorizontalOptions="End" />
        </Grid>

    </Grid>

</ContentPage>