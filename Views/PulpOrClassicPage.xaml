<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:CharactersOfCthulhu.ViewModels"
             x:DataType="viewmodels:PulpOrClassicPageViewModel"
             x:Class="CharactersOfCthulhu.Views.PulpOrClassicPage"
             Title="Select Game Style">

    <Grid RowDefinitions="*,Auto">

        <VerticalStackLayout Grid.Row="0" 
                             Padding="30" 
                             Spacing="20"
                             VerticalOptions="Center">

            <Label Text="Select Game Style"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <VerticalStackLayout BindableLayout.ItemsSource="{Binding GameStyleChoices}"
                                 RadioButtonGroup.GroupName="gameStyleGroup"
                                 RadioButtonGroup.SelectedValue="{Binding SelectedGameStyleName}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:GameStyleChoice">
                        <Frame HasShadow="False" BorderColor="Gray" Padding="15" CornerRadius="5">
                            <VerticalStackLayout Spacing="5">
                                <RadioButton Content="{Binding Name}"
                                             Value="{Binding Name}"
                                             IsChecked="{Binding IsDefault}"
                                             FontSize="18" />
                                <Label Text="{Binding Description}"
                                       FontSize="14"
                                       Margin="30,0,0,0" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

        </VerticalStackLayout>

        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*"
              Padding="10">

            <Button Grid.Column="0"
                    Text="Back"
                    Command="{Binding GoBackCommand}"
                    HorizontalOptions="Start" />

            <Button Grid.Column="1"
                    Text="Next"
                    Command="{Binding GoToNextPageCommand}"
                    HorizontalOptions="End" />
        </Grid>
    </Grid>
</ContentPage>